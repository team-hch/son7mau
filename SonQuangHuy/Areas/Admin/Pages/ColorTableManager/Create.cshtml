@page
@model SonQuangHuy.Pages_ColorTableManager.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Thêm màu mới</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ColorTable.ColorName" class="control-label"></label>
                <input asp-for="ColorTable.ColorName" class="form-control" />
                <span asp-validation-for="ColorTable.ColorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColorTable.ColorCode" class="control-label"></label>
                <input asp-for="ColorTable.ColorCode" class="form-control" />
                <span asp-validation-for="ColorTable.ColorCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
