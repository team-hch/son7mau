@page
@model SonQuangHuy.Admin.BlogManager.DeleteModel

@{
    ViewData["Title"] = "Xóa bài viết";
}

<h1>Xóa</h1>

<h3>Bạn có chắc muốn xóa?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tiều đề
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Blog.BlogTitle)
        </dd>
        <dt class="col-sm-2">
            Mô tả ngắn
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Blog.Description)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Blog.Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-page="./Index">Quay Lại</a>
    </form>
</div>
